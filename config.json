{
  "server": {
    "port": 3000,
    "host": "localhost"
  },
  "ram": {
    "threshold": 90,
    "monitorInterval": 5000,
    "cooldown": 120000,
    "enableAutoKill": false
  },
  "processes": {
    "protected": [
      "systemd",
      "dbus-daemon",
      "dbus-broker",
      "NetworkManager",
      "Xorg",
      "wayland",
      "pipewire",
      "wireplumber",
      "gnome-shell",
      "kwin_wayland",
      "plasmashell",
      "polkitd",
      "rtkit-daemon",
      "gpg-agent",
      "ssh-agent",
      "bash",
      "zsh",
      "fish"
    ],
    "minMemoryMB": 100
  },
  "database": {
    "path": "./data/activity.db"
  },
  "logging": {
    "level": "info",
    "console": true
  }
}
